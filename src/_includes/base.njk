    {% if game %}{% set title = game | genGameObjectTitle %}
    {% else %}
      {# if title %}{% set title = title + " - " %}{% else %}{% set title = "" %}{% endif %}{% set title = title + site.title #}
      {% if title %}
      {% else %}{% set title = site.title %}
      {% endif %}
    {% endif %}
    {% if game %}{% set description = game | genGameObjectTitle %}
    {% else %}
      {% if description %}
      {% else %}{% set description = site.description %}
      {% endif %}
    {% endif %}
    <title>{{ title }}</title>
    <meta name="generator" content="Eleventy">
    <meta name="description" content="{{ description }}">
    <meta name="robots" content="index,follow">

    <link rel="canonical" href="{{ site.url }}{{ page.url | url }}">
    {% if game %}
      {% if game.photos | length %}
        {% set pageImage = site.url + (game | getFirstPhotoPath) %}
      {% endif %}
    {% else %}
      {% set pageImage = site.url + "/OPG.jpg" %}
    {% endif %}

    {% if pageImage %}
      <meta name="thumbnail" content="{{ pageImage }}"/>
    {% endif %}
    <meta property="og:title" content="{{ title }}">
    <meta property="og:locale" content="fa_IR">
    <meta property="og:type" content="{% if game %}game{% else %}website{% endif %}">

    <meta property="og:url" content="{{ site.url }}{{ page.url | url }}">
    <meta property="og:site_name" content="{{ site.title }}">
    <meta property="og:description" content="{{ description }}">
    {% if pageImage %}
      <meta property="og:image" content="{{ pageImage }}">
    {% endif %}
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@alihardan76">
    <meta name="twitter:url" content="{{ site.url }}{{ page.url | url }}">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description }}">
    {% if pageImage %}
      <meta name="twitter:image" content="{{ pageImage }}">
    {% endif %}
    {% if datatables %}
      <link rel="stylesheet" type="text/css" href="/datatables.min.css"/>
      <script type="text/javascript" src="/scripts.js"></script>
    {% endif %}
    <link rel="stylesheet" type="text/css" href="/style.css"/>
    {# <script src="//cdn.jsdelivr.net/npm/eruda"></script> #}
